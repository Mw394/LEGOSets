
@using DTO.Model
@model DTOLEGOBrick
@{
    ViewBag.Title = "LEGOBrickNewEdit";
}

<link href="~/Content/LEGOSetNewEdit.css" rel="stylesheet" type="text/css" />

<h1>LEGO Brick NewEdit</h1>
<div>
    @using (Html.BeginForm("UpdateLEGOBrick", "LEGO", FormMethod.Post))
    {
        @Html.HiddenFor(brick => brick.LEGOBrickID)<br />
        <label>Description</label>
        @Html.TextBoxFor(brick => brick.Description)
        @Html.ValidationMessageFor(brick => brick.Description) <br />
        <label>Design Number</label>
        @Html.TextBoxFor(brick => brick.DesignNumber) <br />
        <label>Color</label>
        @Html.EnumDropDownListFor(brick => brick.Color) <br />
        <div class="actions">
            <input type="submit" />
            @if (!ViewBag.Update)
            {
                <button type="reset">Reset</button>
            }
            <input type="button" value="Cancel" onclick="@("window.location.href='" + @Url.Action("Index", "LEGO") + "'")" />

        </div>
    }

</div>

